<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PicturePickle.MainPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#7CA569</Color>
            <Color x:Key="Main">#69A57E</Color>
            <Color x:Key="Accent2">#69A4A5</Color>
            <Color x:Key="AccentComplement">#A56990</Color>

        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout>
        <Frame BackgroundColor="{StaticResource Main}" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <ScrollView>
            <StackLayout>
                <Label Text="Start developing now" FontSize="Title" Padding="30,10,30,10"/>
                <Image x:Name="imageView"/>
                <Button x:Name="uploadButton" Text="Upload" Clicked="uploadButtonClicked" />
                <Button x:Name="applyFilters" Text="Apply Filters" Clicked="applyFilters_Clicked"/>
                <Button x:Name="saveButton" Text="Save" Clicked="SaveImage_Clicked" />  
            </StackLayout>
        </ScrollView>
    </StackLayout>

</ContentPage>
